{
  "compilerOptions": {
    "target": "es5",
    "moduleResolution": "node",
    "module": "commonjs",
    "importHelpers": true,
    "strict": true,
    "declaration": true,
    "noEmit": true,
    "rootDir": ".",
    "jsx": "react",
    "jsxFactory": "tsx",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strictPropertyInitialization": false,
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "lib": [
      "dom",
      "es2017"
    ]
  },
  "exclude": [
    "node_modules",
    "dist",
    ".cache"
  ],
  "include": [
    "src"
  ]
}