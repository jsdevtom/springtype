{
  "name": "springtype",
  "version": "2.0.0-beta.74",
  "publishConfig": {
    "access": "public"
  },
  "description": "Simply powerful Website, PWA and App development.",
  "scripts": {
    "clean": "st-run st-rm-rf dist",
    "prebuild": "yarn clean",
    "build": "tsc -p tsconfig.dist.json",
    "watch": "tsc -p tsconfig.dist.json -w",
    "postbuild": "st-run st-cp package.json .npmignore README.md LICENSE dist",
    "pree2e": "ts-node ./scripts/e2e-build-all.ts",
    "e2e": "testcafe chrome:headless e2e/**/__e2e__/*",
    "test": "jest --verbose --watch",
    "test:ci": "jest --verbose --runInBand",
    "coverage": "jest --verbose --coverage",
    "coverage:ci": "jest --verbose --coverage --runInBand",
    "release": "yarn publish"
  },
  "author": "Aron Homberg <info@aron-homberg.de>, Michael Mannseicher <m.mansi1@gmx.net>",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^25.2.1",
    "@types/node": "^13.13.2",
    "jest": "^25.4.0",
    "prettier": "^2.0.5",
    "testcafe": "^1.8.4",
    "ts-jest": "^25.4.0",
    "ts-node": "^8.9.1",
    "typescript": "^3.8.3"
  }
}
